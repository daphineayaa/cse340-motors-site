          <a href="#" class="button">View Details</a>
        </div>
        <div class="car">
          <img src="/images/car2.webp" alt="Car 2">
          <h3>Car Model 2</h3>
          <a href="#" class="button">View Details</a>
        </div>
      </div>
    </section>
