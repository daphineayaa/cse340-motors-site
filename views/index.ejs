<!DOCTYPE html>
<html lang="en">
  <%- include('shared/head') %>
<body>
  <!-- Header -->
  <%- include('shared/header') %>

  <!-- Navigation -->
  <%- include('shared/navigation') %>

  <!-- Main Content -->
  <main>
    <!-- Banner Section -->
    <section class="banner">
      <img src="/images/car_banner.jpg" alt="CSE Motors Banner">
      <div class="banner-text">
        <h1>Welcome to CSE Motors!</h1>
        <a href="#cars" class="button">View Cars</a>
